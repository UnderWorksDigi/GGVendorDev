  <div class="section-{{ section.id }} pricing-plan-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings ">
      {% if heading != blank %}
        <div class="pricing-plan-heading-{{ section.id }}">{{ heading }}</div>
      {% endif %}

      {% if sub_heading != blank %}
        <div class="pricing-plan-subheading-{{ section.id }}">{{ sub_heading }}</div>
      {% endif %}

      <div class="pricing-plan-items-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="pricing-plan-item-{{ section.id }} {% if block.settings.active %}active-item-{{ section.id }}{% endif %}">
            {% if block.settings.badges != blank %}
              {% assign badges = block.settings.badges | split: ',' %}
              <div class="pricing-plan-badges-{{ section.id }}">
                {% for budge in badges %}
                  <div class="pricing-plan-budge-{{ section.id }}">{{ budge }}</div>
                {% endfor %}
              </div>
            {% endif %}
            {% if block.settings.image != blank %}
              <div class="pricing-plan-image-{{ section.id }}">
                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
              </div>
            {% endif %}
            {% if block.settings.heading != blank %}
              <p class="pricing-plan-title-{{ section.id }}">{{ block.settings.heading }}</p>
            {% endif %}
            <p class="pricing-plan-price-{{ section.id }}">{% if block.settings.price_sale != blank %}<span class="pricing-plan-price-sale-{{ section.id }}">{% if block.settings.currency != blank %}{{ block.settings.currency }}{% endif %}{{ block.settings.price_sale }}</span>{% endif %}{% if block.settings.currency != blank %}{{ block.settings.currency }}{% endif %}{{ block.settings.price }}{% if block.settings.time != blank %}<span>{{ block.settings.time }}</span>{% endif %}</p>
            {% if elements_position == "before" %}
              <div class="pricing-plan-list-{{ section.id }}">
                {{ block.settings.elements }}
              </div>
            {% endif %}
            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_url }}" class="pricing-plan-btn-{{ section.id }}">
                {% if button_icon != blank %}
                  <img src="{{ button_icon | image_url }}" alt="{{ button_icon.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                {% endif %}
                {{ block.settings.button_text }}
              </a>
            {% endif %}
            {% if block.settings.text != blank %}
              <p class="pricing-plan-text-{{ section.id }}">
                {{ block.settings.text }}
              </p>
            {% endif %}
            {% if elements_position == "after" %}
              <div class="pricing-plan-list-{{ section.id }}">
                {{ block.settings.elements }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
