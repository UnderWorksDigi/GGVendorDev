{% assign secSt = section.settings %}

<div class="content-indent {{ secSt.top-offeset}}">
  
 {% if secSt.section_cov %}<div class="section-cover" style="--sbg:{{secSt.sec_bg_clr}};">{% endif %}
	
  <div class="page-width" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="carousel">
	  
    {%- if secSt.title != blank  or secSt.subtitle != blank -%}
    <div class="sec-ttl {{ settings.title_align}} wow fadeIn">
      <h3 class="h3">{{ secSt.title }}</h3>     
      {%- if secSt.subtitle != blank -%}<span>{{secSt.subtitle}}</span>{%- endif -%}
    </div>
    {%- endif -%}
	  
    {% if secSt.custom_liquid != blank %}{{ secSt.custom_liquid }}{% endif %}
  </div>
  {% if secSt.section_cov %}</div>{% endif %}
</div>
{% schema %}
  {
    "name": "Custom Liquid",
    "class": "index-section",
    "settings": [	  		
      {
        "type": "textarea",
        "id": "title",
        "label": "Heading",
        "default": "Custom Liquid"		
      },	  
	  {
         "type": "textarea",
         "id": "subtitle",
         "label": "Sub Heading",
         "default": "Describe about this section..."
      },
      {
         "id": "custom_liquid",
         "type": "liquid",
         "label": "Liquid Code"
      },
      {
        "type": "header",
        "content": "Appearance Section ==="
      },
	  {
            "type": "select",
            "id": "top-offeset",
            "label": "Top OffSet",
            "default": "default",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "small",
                "label": "Small"
              },
			  {
                "value": "none",
                "label": "None"
              }
			]
      }, 		
      {
        "type": "checkbox",
        "id": "section_cov",
        "label": "Add Background?",
        "default": false
      },
	  {
        "type": "color",
        "id": "sec_bg_clr",
        "label": "Background",
		"default":"#fafafa",
		"info":"select light color"
	  }
	 ],
    "presets": [
      {
        "name": "Custom Liquid"
        
      }
    ]
  }
{% endschema %}