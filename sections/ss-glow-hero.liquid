<div class="hero_banner">
  <div class="hero_wrapper">
    <div class="hero_content">
      <div class="hero_content-title">
        <span>{{ section.settings.header }}</span>
        <p>{{ section.settings.subheader }}</p>
      </div>
      <div class="hero_img">
        <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="">
      </div>
      <div class="hero_content-bottom">
        <div class="hero_content-btn">
          <a class="hero_content-btn_shop" href="{{ section.settings.button_1_url }}">{{ section.settings.button_1_text }}</a>
          <a class="hero_content-btn_arrow" href="{{ section.settings.button_2_url }}"><span>{{ section.settings.button_2_text }}</span><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" class="bi bi-arrow-right" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
</svg></a>
        </div>
        <div class="hero_content-block">
          <div class="hero_block-satisfied">
            <span>{{section.settings.features_left_num}}</span>
            <p>{{section.settings.features_left_text}}</p>
          </div>
          <div class="hero_block-custom">
            <span>{{section.settings.features_right_num}}</span>
            <p>{{section.settings.features_right_text}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

.hero-section { padding: 0 {{section.settings.section_padding_desktop}}px }
.hero_content-block {
  display: flex;
  padding-top: 25px;
}
.hero_content-block p {
  {% if section.settings.features_blur %}
	text-shadow: 
		-0   -1px 0   #5769EB,
		 0   -1px 0   #5769EB,
		-0    1px 0   #5769EB,
		 0    1px 0   #5769EB,
		-1px -0   0   #5769EB,
		 1px -0   0   #5769EB,
		-1px  0   0   #5769EB,
		 1px  0   0   #5769EB,
		-1px -1px 0   #5769EB,
		 1px -1px 0   #5769EB,
		-1px  1px 0   #5769EB,
		 1px  1px 0   #5769EB,
		-1px -1px 0   #5769EB,
		 1px -1px 0   #5769EB,
		-1px  1px 0   #5769EB,
		 1px  1px 0   #5769EB;
    {% endif %}
}
.hero_block-satisfied {
  max-width: 188px;
  width: 100%;
  padding: 20px;
  margin-right: 20px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  color: {{ section.settings.features_color }};
}
.hero_block-satisfied::after {
  content:"";
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  border-radius: 15px; 
  padding: 2px; 
  background:linear-gradient({{section.settings.global_gradient_color_1}}, {{section.settings.global_gradient_color_3}}, {{section.settings.global_gradient_color_2}});
  -webkit-mask: 
     linear-gradient(#fff 0 0) content-box, 
     linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
          mask-composite: exclude; 
}
.hero_block-satisfied span {
  font-weight:600;
  font-size: {{ section.settings.features_num_font_size }}px;
}
.hero_block-satisfied p {
  font-weight:600;
  margin: 15px 0 0 0;
  font-size: {{ section.settings.features_font_size }}px;
  color: {{ section.settings.features_color }};
}
.hero_block-custom {
  max-width: 188px;
  width: 100%;
  text-align: center;
  padding: 20px;
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  color: {{ section.settings.features_color }};
}
.hero_block-custom::after {
  content:"";
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  border-radius: 15px; 
  padding: 2px; 
  background:linear-gradient({{section.settings.global_gradient_color_1}}, {{section.settings.global_gradient_color_3}}, {{section.settings.global_gradient_color_2}});
  -webkit-mask: 
     linear-gradient(#fff 0 0) content-box, 
     linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
          mask-composite: exclude; 
}
.hero_block-custom span {
  font-weight: 600;
  font-size: {{ section.settings.features_num_font_size }}px;
  line-height: 1.3em;
}
.hero_block-custom p {
  font-weight: 600;
  font-size: {{ section.settings.features_font_size }}px;
  margin: 16px 0 0 0;
  color: {{ section.settings.features_color }};
}

.hero_content {
  display: flex;
  flex-wrap: wrap;
}
.hero_content-title {
  flex: 0 1 50%;
  padding-bottom: 20px;
  font-weight: 600;
}
.hero_img {
  flex: 0 1 50%;
  height: 10px;
}
.hero_img img {
  margin-top: 50px;
  max-width: 100%;
}
.hero_wrapper {
  max-width: 125rem;
  margin: 0 auto;
  padding: 80px 25px;
  display: flex;
}
.hero_content-title span {
  font-weight: bold;
  line-height: 1.1;
  color: {{section.settings.header_color}};
  font-size: {{section.settings.header_font_size}}px;
}
.hero_content-title p {
  margin: 15px 0px;
  font-weight: normal;
  line-height: 1.5;
  color: #fff;
  font-size: 18px;
}
.hero_content-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25px;
}
.hero_content-btn_arrow {
  flex: 0 1 40%;
  display: flex;
  align-items: center;
  text-decoration: none;
}
.hero_content-btn_arrow span {
  font-weight: 500;
  font-size: 16px;
  line-height: 42px;
  color: #FFFFFF;
  padding-right: 10px;
}
.hero_content-btn_shop {
  border-radius: 15px;
  padding: {{section.settings.button_1_font_size}}px;
  flex: 0 1 40%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, {{section.settings.global_gradient_color_1}} 0%,{{section.settings.global_gradient_color_2}} 50%, {{section.settings.global_gradient_color_3}});
  font-size: {{ section.settings.button_1_font_size }}px;
  color: {{ section.settings.button_1_color }};
  text-decoration: none;
}


@media (max-width: 1100px) {
  .hero_img img {
    padding: 0;
    max-width: 100%;
  }
  .hero_img {
    height: auto;
    margin: 0 auto;
  }
  .hero_content-btn_arrow span {
    display: block;
  }
}

@media (max-width: 1020px) {
  .hero-section { padding: 0 {{section.settings.section_padding_tab}}px }

  .hero_content {
    flex-direction: column;
  }
  .hero_content-title {
    flex: auto;
  }
  .hero_img {
    flex: auto;
  }
  .hero_content-bottom {
  }
}

@media (max-width: 767px) {

  .hero_content-block {
  padding-top: 0px;
}
  
  .hero_img img {
    margin-top: 0px;
  }
  .hero-section { padding: 0 {{section.settings.section_padding_mob}}px }
  .hero_wrapper {
    padding: 40px 15px;
  }
  .hero_content-btn_arrow {
    flex: auto;
    padding-left: 20px;
  }
  .hero_block-custom {
    max-width: 140px;
  }
  .hero_block-satisfied {
    max-width: 140px;
  }
  .hero_content-title {
    padding-bottom: 0px;
  }
  .hero_content-title span {
    line-height: 1.1em;
    font-size: {{section.settings.header_font_mob_size}}px;
  }
  .hero_block-satisfied span {
    font-weight:600;
    font-size: {{ section.settings.features_num_font_mob_size }}px;
  }
  .hero_block-satisfied p {
    margin: 15px 0 0 0;
    font-size: {{ section.settings.features_font_mob_size }}px;
  }

  .hero_block-custom span {
  font-size: {{ section.settings.features_num_font_mob_size }}px;
  line-height: 1.3em;
    
  }
  .hero_block-custom p {
    font-size: {{ section.settings.features_font_mob_size }}px;
  }
}

@media (max-width: 425px) {
  .hero_content-btn_shop {
  	margin:20px;
    padding: 14px 24px;
  }
  .hero_content-btn{
    flex-flow: column;
  }
  .hero_content-block {
    justify-content: space-around;
  }
  .hero_block-satisfied {
    margin: 0;
  }
  .hero_block-custom {
    margin: 0;
  }
}

.hero_banner {
  background: linear-gradient(119.19deg, {{section.settings.body_gradient_color_1}} -3.63%, {{section.settings.body_gradient_color_2}} -3.62%, {{section.settings.body_gradient_color_3}} 27.59%, {{section.settings.body_gradient_color_4}} 54.32%, {{section.settings.body_gradient_color_5}} 71.73%, #12173D 99.72%);
}



</style>

