<form action="{{ routes.search_url }}" method="get" class="search {% if search-form == "solid-search" %}solid-search{% endif %}" role="search">
  <div class="input-group">
    <input name="options[prefix]" type="hidden" value="last">
    <input class="input-group__field s_input" type="search" name="q" placeholder="{{ 'general.search.placeholder' | t }}" value="{{ search.terms | escape }}" autocomplete="off" />
    <span class="input-group__btn">
      <button class="btn s_submit" type="submit"><i class="at at-search-l"></i> <span class="hidden_txt">{{ 'general.search.submit' | t }}</span></button>
    </span>    
  </div>
  {% if search-form == "close" %} 
   <a class="closeSearch" href="#"><i class="at at-times-l" aria-hidden="true"></i></a>     
  {% endif %}
  <div class="s_res" style="display:none;"></div>
</form>